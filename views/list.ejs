<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <form action="/delete" method="post">
    <% newListItems.forEach(items => { %>
    <div class="item">
      <input class="check" type="checkbox" name="checkbox" value="<%= items._id %>" onchange="this.form.submit()" />
      <p><%= items.itemName %></p>
      <input type="hidden" name="listName" value="<%= listTitle %>" />
    </div>
    <% }); %>
  </form>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required />
    <button type="submit" name="list" value="<%= listTitle %>"><i class="fa-solid fa-circle-plus"></i></button>
  </form>
</div>

<%- include("footer") -%>
